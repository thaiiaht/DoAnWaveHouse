<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Nhân viên</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header */
        .page-header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            color: #1e3a8a;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-title i {
            font-size: 32px;
        }

        /* Employee Table */
        .employee-table {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: linear-gradient(135deg,  #1E3A8A);
            color: white;
        }

        th {
            padding: 18px 20px;
            text-align: left;
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        th:last-child {
            text-align: center;
        }

        tbody tr {
            border-bottom: 1px solid #f3f4f6;
            transition: all 0.2s;
        }

        tbody tr:hover {
            background: #f9fafb;
        }

        td {
            padding: 20px;
            font-size: 15px;
            color: #374151;
        }

        td:last-child {
            text-align: center;
        }

        /* Avatar */
        .employee-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 16px;
        }

        .employee-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .employee-name {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 4px;
        }

        .employee-email {
            font-size: 13px;
            color: #6b7280;
        }

        /* Role Badge */
        .role-badge {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .role-admin {
            background: #fee2e2;
            color: #991b1b;
        }

        .role-staff {
            background: #dbeafe;
            color: #1e40af;
        }

        /* Role Select in Actions */
        .role-select {
            padding: 10px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 14px;
            cursor: pointer;
            background: white;
            transition: all 0.3s;
            font-weight: 600;
            min-width: 120px;
            color: #374151;
        }

        .role-select:hover {
            border-color:  #1E3A8A;
        }

        .role-select:focus {
            outline: none;
            border-color:  #1E3A8A;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
            align-items: center;
        }

        .action-btn {
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            font-size: 16px;
            flex-shrink: 0;
        }

        .btn-edit {
            background: #dbeafe;
            color: #2563eb;
        }

        .btn-edit:hover {
            background: #bfdbfe;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(37, 99, 235, 0.2);
        }

        .btn-delete {
            background: #fecaca;
            color: #dc2626;
        }

        .btn-delete:hover {
            background: #fca5a5;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 38, 38, 0.2);
        }

        .btn-save {
            background: #d1fae5;
            color: #059669;
        }

        .btn-save:hover {
            background: #a7f3d0;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(5, 150, 105, 0.2);
        }

        .btn-cancel {
            background: #f3f4f6;
            color: #6b7280;
        }

        .btn-cancel:hover {
            background: #e5e7eb;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(107, 114, 128, 0.2);
        }

        .action-btn:active {
            transform: translateY(0);
        }

        /* Status */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .status-active {
            background: #d1fae5;
            color: #065f46;
        }

        .status-inactive {
            background: #f3f4f6;
            color: #6b7280;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: currentColor;
        }

        /* Empty State */
        .empty-state {
            padding: 60px 20px;
            text-align: center;
            color: #9ca3af;
        }

        .empty-state i {
            font-size: 64px;
            margin-bottom: 20px;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .employee-table {
                overflow-x: auto;
            }

            table {
                min-width: 900px;
            }
        }

        @media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .search-bar {
                flex-direction: column;
            }

            .search-input, .filter-select {
                width: 100%;
            }
        }
               /* Back Button */
        .back-home-btn {
            padding: 12px 24px;
            margin-bottom: 2%;
            width: 15%;
            background: linear-gradient(135deg,  #1E3A8A);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fa-solid fa-users"></i>
                Quản lý Nhân viên
            </h1>
        </div>
        <a href="/" class="back-home-btn">
                <i class="fa-solid fa-house"></i>
                Back Home
        </a>
        <!-- Employee Table -->
        <div class="employee-table">
            <table id="employeeTable">
                <thead>
                    <tr>
                        <th>Nhân viên</th>
                        <th>Trạng thái</th>
                        <th>Ngày tham gia</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="employeeTableBody">
                    <!-- Data will be inserted here -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        let employees = [
            { id: 1, name: "Nguyễn Văn An", email: "an.nguyen@warehouse.com", role: "admin", status: "active", joinDate: "2023-01-15" },
            { id: 2, name: "Trần Thị Bình", email: "binh.tran@warehouse.com", role: "staff", status: "active", joinDate: "2023-03-20" },
            { id: 3, name: "Lê Văn Cường", email: "cuong.le@warehouse.com", role: "staff", status: "active", joinDate: "2023-06-10" },
            { id: 4, name: "Phạm Thị Dung", email: "dung.pham@warehouse.com", role: "staff", status: "active", joinDate: "2023-08-05" },
            { id: 5, name: "Hoàng Văn Em", email: "em.hoang@warehouse.com", role: "staff", status: "inactive", joinDate: "2023-09-12" },
            { id: 6, name: "Vũ Thị Phương", email: "phuong.vu@warehouse.com", role: "admin", status: "active", joinDate: "2023-04-18" },
            { id: 7, name: "Đỗ Văn Giang", email: "giang.do@warehouse.com", role: "staff", status: "active", joinDate: "2023-07-25" },
        ];

        // Get role label
        function getRoleLabel(role) {
            const labels = {
                admin: 'Admin',
                staff: 'Staff'
            };
            return labels[role] || role;
        }

        // Get status label
        function getStatusLabel(status) {
            return status === 'active' ? 'Hoạt động' : 'Ngừng hoạt động';
        }

        // Get initials
        function getInitials(name) {
            return name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);
        }

        // Format date
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN');
        }

        // Render table
        function renderTable(data = employees) {
            const tbody = document.getElementById('employeeTableBody');
            
            if (data.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="empty-state">
                            <i class="fa-solid fa-users-slash"></i>
                            <p>Không tìm thấy nhân viên nào</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = data.map(emp => `
                <tr id="row-${emp.id}">
                    <td>
                        <div class="employee-info">
                            <div class="employee-avatar">${getInitials(emp.name)}</div>
                            <div>
                                <div class="employee-name">${emp.name}</div>
                                <div class="employee-email">${emp.email}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="status-badge status-${emp.status}">
                            <span class="status-dot"></span>
                            ${getStatusLabel(emp.status)}
                        </span>
                    </td>
                    <td>${formatDate(emp.joinDate)}</td>
                    <td>
                        <div class="action-buttons">
                            <select class="role-select" onchange="updateRole(${emp.id}, this.value)">
                                <option value="staff" ${emp.role === 'staff' ? 'selected' : ''}>Staff</option>
                                <option value="admin" ${emp.role === 'admin' ? 'selected' : ''}>Admin</option>
                            </select>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        // Update role directly from dropdown
        function updateRole(id, newRole) {
            const employee = employees.find(e => e.id === id);
            const oldRole = employee.role;
            employee.role = newRole;
            
            console.log(`Đã cập nhật vai trò của ${employee.name} từ ${getRoleLabel(oldRole)} thành ${getRoleLabel(newRole)}`);
            
            // You can add API call here to update in backend
            // Example: fetch(`/api/employees/${id}/role`, { method: 'PUT', body: JSON.stringify({ role: newRole }) })
        }

        // Delete employee
        function deleteEmployee(id) {
            const employee = employees.find(e => e.id === id);
            if (confirm(`Bạn có chắc muốn xóa nhân viên "${employee.name}"?`)) {
                employees = employees.filter(e => e.id !== id);
                renderTable();
                console.log(`Đã xóa nhân viên: ${employee.name}`);
            }
        }

        // Initial render
        renderTable();
    </script>
</body>
</html>